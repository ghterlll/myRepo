<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.mobile.aura.mapper.CommentLikeMapper">

    <!-- Result Map -->
    <resultMap id="BaseResultMap" type="com.mobile.aura.domain.content.CommentLike">
        <result column="comment_id" property="commentId"/>
        <result column="user_id" property="userId"/>
        <result column="created_at" property="createdAt"/>
    </resultMap>

    <!-- Count likes for a user on a comment -->
    <select id="countLike" resultType="long">
        SELECT COUNT(1) FROM post_comment_like
        WHERE user_id = #{userId} AND comment_id = #{commentId}
    </select>

    <!-- Delete like by user and comment -->
    <delete id="deleteLike">
        DELETE FROM post_comment_like
        WHERE user_id = #{userId} AND comment_id = #{commentId}
    </delete>

</mapper>
