<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/bg_card"
    android:padding="16dp"
    android:layout_marginTop="8dp"
    android:gravity="center_vertical"
    android:clickable="true"
    android:focusable="true">

    <!-- Food Image -->
    <ImageView
        android:id="@+id/foodImage"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@android:drawable/ic_menu_gallery"
        android:background="@drawable/bg_circle_light_gray"
        android:scaleType="centerCrop"
        android:layout_marginEnd="12dp" />

    <!-- Food Info -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- Food Name -->
        <TextView
            android:id="@+id/foodName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shrimp Dumplings"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#333333" />

        <!-- Quantity and Calories -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp">

            <TextView
                android:id="@+id/foodQuantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1 servings"
                android:textSize="12sp"
                android:textColor="#666666" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" â€¢ "
                android:textSize="12sp"
                android:textColor="#666666" />

            <TextView
                android:id="@+id/foodCalories"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="36 kcal"
                android:textSize="12sp"
                android:textColor="#666666" />

        </LinearLayout>

        <!-- Time -->
        <TextView
            android:id="@+id/foodTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="17:30"
            android:textSize="10sp"
            android:textColor="#999999"
            android:layout_marginTop="2dp" />

    </LinearLayout>

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- Delete Button -->
        <ImageView
            android:id="@+id/btnDelete"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_delete"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="4dp"
            android:layout_marginEnd="8dp" />

        <!-- Edit Button (chevron right) -->
        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_chevron_right"
            android:alpha="0.6" />

    </LinearLayout>

</LinearLayout>
