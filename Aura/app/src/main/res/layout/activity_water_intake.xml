<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5">

    <!-- Status Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">
        
        <TextView
            android:id="@+id/tvTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12:37"
            android:textSize="16sp"
            android:textColor="#000000" />
            
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />
            
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4G"
            android:textSize="14sp"
            android:textColor="#000000" />
            
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_battery_full"
            android:layout_marginLeft="8dp" />
    </LinearLayout>

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">
        
        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_back"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="4dp" />
            
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Water Intake Record"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:gravity="center" />
            
        <TextView
            android:id="@+id/btnSettings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Settings"
            android:textSize="16sp"
            android:textColor="#000000"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="8dp" />
    </LinearLayout>

    <!-- Goal Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#E3F2FD"
        android:padding="16dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="16dp">
        
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Goal: 2268ml"
            android:textSize="16sp"
            android:textColor="#1976D2" />
            
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#BBDEFB"
            android:layout_marginHorizontal="8dp" />
            
        <TextView
            android:id="@+id/tvProgress"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Completed 0%, still need to drink 2268ml"
            android:textSize="14sp"
            android:textColor="#1976D2" />
    </LinearLayout>

    <!-- Main Content Area -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/bg_water_bubbles">
        
        <!-- Glass and Panda -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="32dp">
            
            <!-- Large Glass -->
            <ImageView
                android:id="@+id/ivGlass"
                android:layout_width="120dp"
                android:layout_height="200dp"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_glass_empty" />
                
            <!-- Water Level -->
            <ImageView
                android:id="@+id/ivWaterLevel"
                android:layout_width="100dp"
                android:layout_height="0dp"
                android:layout_centerHorizontal="true"
                android:layout_alignBottom="@id/ivGlass"
                android:layout_marginBottom="20dp"
                android:src="@drawable/ic_water_fill"
                android:visibility="gone" />
                
            <!-- Current Amount Text -->
            <TextView
                android:id="@+id/tvCurrentAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="0ml"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#000000" />
                
        </RelativeLayout>
    </FrameLayout>

    <!-- Quick Record Buttons -->
    <LinearLayout
        android:id="@+id/quickRecordContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@drawable/bg_quick_record_button"
                android:padding="12dp"
                android:layout_margin="4dp"
                android:gravity="center">
                
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_add_blue"
                    android:layout_marginBottom="4dp" />
                    
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add Drink Quick Record"
                    android:textSize="12sp"
                    android:textColor="#1976D2"
                    android:gravity="center" />
            </LinearLayout>
            
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@drawable/bg_quick_record_button"
                android:padding="12dp"
                android:layout_margin="4dp"
                android:gravity="center">
                
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_add_blue"
                    android:layout_marginBottom="4dp" />
                    
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add Drink Quick Record"
                    android:textSize="12sp"
                    android:textColor="#1976D2"
                    android:gravity="center" />
            </LinearLayout>
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@drawable/bg_quick_record_button"
                android:padding="12dp"
                android:layout_margin="4dp"
                android:gravity="center">
                
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_add_blue"
                    android:layout_marginBottom="4dp" />
                    
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add Drink Quick Record"
                    android:textSize="12sp"
                    android:textColor="#1976D2"
                    android:gravity="center" />
            </LinearLayout>
            
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@drawable/bg_quick_record_button"
                android:padding="12dp"
                android:layout_margin="4dp"
                android:gravity="center">
                
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_add_blue"
                    android:layout_marginBottom="4dp" />
                    
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add Drink Quick Record"
                    android:textSize="12sp"
                    android:textColor="#1976D2"
                    android:gravity="center" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- Water Intake Summary -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Water Intake Record"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#000000" />
                
            <TextView
                android:id="@+id/tvRecordCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0 times"
                android:textSize="14sp"
                android:textColor="#666666" />
        </LinearLayout>
        
        <!-- Records List -->
        <LinearLayout
            android:id="@+id/recordsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_card"
            android:padding="16dp"
            android:layout_marginTop="8dp">
            
            <!-- Empty State -->
            <LinearLayout
                android:id="@+id/emptyState"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="32dp">
                
                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/ic_panda_relaxed"
                    android:layout_marginBottom="16dp" />
                    
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No water recorded today~"
                    android:textSize="16sp"
                    android:textColor="#666666"
                    android:gravity="center" />
            </LinearLayout>
            
            <!-- Records List (hidden by default) -->
            <LinearLayout
                android:id="@+id/recordsList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

    <!-- Main Action Button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <Button
            android:id="@+id/btnRecordWater"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Record Today's Water Intake"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:background="@drawable/bg_primary_button"
            android:textStyle="bold" />
    </LinearLayout>


</LinearLayout>
