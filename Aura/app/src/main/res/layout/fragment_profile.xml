<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Pretty header with cover -->
        <RelativeLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:background="@drawable/profile_header_bg">

            <ImageView
                android:id="@+id/imgCover"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:alpha="0.9"/>

            <ImageView
                android:id="@+id/imgAvatar"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="56dp"
                android:background="@drawable/avatar_bg"
                android:src="@drawable/placeholder"
                android:scaleType="centerCrop"/>

            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="You"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:textSize="22sp"
                android:layout_below="@id/imgAvatar"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"/>

            <ImageView
                android:id="@+id/btnEdit"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/ic_edit"
                android:layout_alignParentEnd="true"
                android:layout_margin="12dp"/>

            <!-- Link buttons -->
            <LinearLayout
                android:id="@+id/linkBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvName"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/btnIG"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/ic_instagram"
                    android:padding="6dp"/>

                <ImageView
                    android:id="@+id/btnXHS"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/ic_xhs"
                    android:padding="6dp"/>
            </LinearLayout>
        </RelativeLayout>

        <!-- Bio -->
        <TextView
            android:id="@+id/tvBio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="This user has not written a bio yet."
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="12dp"
            android:paddingBottom="8dp"
            android:textColor="#555555"/>

        <!-- Theme selector -->
        <LinearLayout
            android:id="@+id/themeBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Theme:"
                android:textColor="#777777"
                android:layout_marginRight="8dp"/>

            <View
                android:id="@+id/theme0"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/profile_header_bg"
                android:layout_marginRight="12dp"/>

            <View
                android:id="@+id/theme1"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/profile_header_bg_blue"
                android:layout_marginRight="12dp"/>

            <View
                android:id="@+id/theme2"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/profile_header_bg_purple"
                android:layout_marginRight="12dp"/>

            <View
                android:id="@+id/theme3"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/profile_header_bg_teal"/>
        </LinearLayout>

        <!-- Floating stat card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/profile_stat_card"
                android:padding="16dp"
                android:orientation="horizontal"
                android:weightSum="4"
                android:elevation="4dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tvStatDays"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textStyle="bold"
                        android:textSize="18sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Days"
                        android:textColor="#777777"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tvStatMeals"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textStyle="bold"
                        android:textSize="18sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Meals"
                        android:textColor="#777777"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tvStatHealthy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textStyle="bold"
                        android:textSize="18sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Healthy"
                        android:textColor="#777777"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tvStatPosts"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textStyle="bold"
                        android:textSize="18sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Posts"
                        android:textColor="#777777"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- Tabs -->
        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tabIndicatorFullWidth="false"
            app:tabMode="fixed"
            app:tabGravity="fill" />

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="800dp"/>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
