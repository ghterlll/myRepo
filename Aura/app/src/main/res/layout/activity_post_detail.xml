<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <!-- Top Navigation Bar -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="0dp"
        app:cardElevation="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingStart="8dp"
            android:paddingEnd="16dp">

            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Back"
                android:src="@drawable/ic_arrow_back"
                app:tint="#333333" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Post Details"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:paddingStart="8dp" />

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Area 1: Dynamic Image (scales to fit content) -->
    <ImageView
        android:id="@+id/imgCover"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:maxHeight="400dp"
        android:src="@drawable/placeholder"
        android:background="#F5F5F5" />

    <!-- Area 2: Title + Content (scrollable, collapsible) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="#FFFFFF">

        <!-- Title (1 line fixed) -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Post Title"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="#333333"
            android:maxLines="1"
            android:ellipsize="end" />

        <!-- Content (min 3 lines, expandable) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/tvContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Post content goes here..."
                android:textSize="14sp"
                android:textColor="#555555"
                android:lineSpacingExtra="2dp"
                android:minLines="3"
                android:maxLines="3"
                android:ellipsize="end" />

            <TextView
                android:id="@+id/btnExpand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Expand"
                android:textColor="#4CAF50"
                android:textSize="13sp"
                android:textStyle="bold"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:visibility="gone"
                android:clickable="true"
                android:focusable="true" />

        </LinearLayout>

    </LinearLayout>

    <!-- Area 3: Xiaohongshu-style Interaction Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical"
        android:background="#FAFAFA"
        android:elevation="4dp">

        <!-- Write Comment Button (Pen Icon) -->
        <ImageButton
            android:id="@+id/btnWriteComment"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_edit"
            android:contentDescription="Write comment"
            android:scaleType="fitCenter"
            app:tint="#666666" />

        <!-- Blank Box (opens comment dialog) -->
        <LinearLayout
            android:id="@+id/layoutCommentInput"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:background="@drawable/bg_comment_input"
            android:gravity="center_vertical"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:clickable="true"
            android:focusable="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#999999"
                android:textSize="14sp" />

        </LinearLayout>

        <!-- Like Button with Count -->
        <LinearLayout
            android:id="@+id/layoutLike"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginStart="12dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="4dp">

            <ImageButton
                android:id="@+id/btnLikeDetail"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@android:color/transparent"
                android:contentDescription="Like"
                android:src="@drawable/ic_heart_outline"
                android:scaleType="fitCenter" />

            <TextView
                android:id="@+id/tvLikeCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9999+"
                android:textSize="12sp"
                android:textColor="#666666"
                android:layout_marginStart="4dp"
                android:minWidth="40dp" />

        </LinearLayout>

        <!-- Bookmark Button with Count -->
        <LinearLayout
            android:id="@+id/layoutBookmark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginStart="8dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="4dp">

            <ImageButton
                android:id="@+id/btnBookmarkDetail"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@android:color/transparent"
                android:contentDescription="Bookmark"
                android:src="@drawable/ic_bookmark_outline"
                android:scaleType="fitCenter" />

            <TextView
                android:id="@+id/tvBookmarkCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9999+"
                android:textSize="12sp"
                android:textColor="#666666"
                android:layout_marginStart="4dp"
                android:minWidth="40dp" />

        </LinearLayout>

        <!-- Comment Button with Count -->
        <LinearLayout
            android:id="@+id/layoutComment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginStart="8dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="4dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_comment"
                android:scaleType="fitCenter"
                app:tint="#666666" />

            <TextView
                android:id="@+id/tvCommentCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9999+"
                android:textSize="12sp"
                android:textColor="#666666"
                android:layout_marginStart="4dp"
                android:minWidth="40dp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
