<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:background="#CFE8D4">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:padding="4dp"
            android:src="@android:drawable/ic_media_previous"
            android:background="?attr/selectableItemBackgroundBorderless" />

        <LinearLayout
            android:id="@+id/mealDropdown"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="8dp"
            android:layout_marginStart="40dp"
            android:background="?attr/selectableItemBackgroundBorderless">

            <TextView
                android:id="@+id/tvMealType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Breakfast"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:textSize="18sp" />

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginStart="6dp"
                android:src="@android:drawable/arrow_down_float" />
        </LinearLayout>

        <TextView
            android:id="@+id/btnCustomAdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Custom Add"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:padding="8dp"
            android:background="?attr/selectableItemBackgroundBorderless" />
    </LinearLayout>

    <!-- Search bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_margin="16dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:gravity="center_vertical"
        android:background="#F3F7F1">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@android:drawable/ic_menu_search"
            android:layout_marginEnd="8dp" />

        <EditText
            android:id="@+id/etSearch"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Search massive food library"
            android:textSize="14sp"
            android:textColorHint="@android:color/darker_gray"
            android:background="@null"
            android:inputType="text" />
    </LinearLayout>

    <!-- Main content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <!-- Left categories -->
        <ScrollView
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:background="#F5F5F5">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/categoryCommon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="44dp"
                    android:gravity="center_vertical"
                    android:text="Common"
                    android:textSize="14sp"
                    android:textColor="@android:color/black"
                    android:padding="12dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="8dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:clickable="true" />

                <TextView
                    android:id="@+id/categoryBreakfast"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="44dp"
                    android:gravity="center_vertical"
                    android:text="Breakfast"
                    android:textSize="14sp"
                    android:textColor="@android:color/black"
                    android:padding="12dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="8dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:clickable="true" />

                <TextView
                    android:id="@+id/categoryMeat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="44dp"
                    android:gravity="center_vertical"
                    android:text="Meat Dishes"
                    android:textSize="14sp"
                    android:textColor="@android:color/black"
                    android:padding="12dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="8dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:clickable="true" />

                <TextView
                    android:id="@+id/categoryVegetarian"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="44dp"
                    android:gravity="center_vertical"
                    android:text="Vegetarian"
                    android:textSize="14sp"
                    android:textColor="@android:color/black"
                    android:padding="12dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="8dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:clickable="true" />

                <TextView
                    android:id="@+id/categoryForeign"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="44dp"
                    android:gravity="center_vertical"
                    android:text="Foreign Cuisine"
                    android:textSize="14sp"
                    android:textColor="@android:color/black"
                    android:padding="12dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="8dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:clickable="true" />

                <TextView
                    android:id="@+id/categoryStaple"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="44dp"
                    android:gravity="center_vertical"
                    android:text="Staple Food"
                    android:textSize="14sp"
                    android:textColor="@android:color/black"
                    android:padding="12dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="8dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:clickable="true" />

                <TextView
                    android:id="@+id/categoryFruit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="44dp"
                    android:gravity="center_vertical"
                    android:text="Fruit"
                    android:textSize="14sp"
                    android:textColor="@android:color/black"
                    android:padding="12dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="8dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:clickable="true" />

                <TextView
                    android:id="@+id/categorySnacks"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="44dp"
                    android:gravity="center_vertical"
                    android:text="Snacks"
                    android:textSize="14sp"
                    android:textColor="@android:color/black"
                    android:padding="12dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="8dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:clickable="true" />

                <TextView
                    android:id="@+id/categoryDrinks"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="44dp"
                    android:gravity="center_vertical"
                    android:text="Soups &amp; Drinks"
                    android:textSize="14sp"
                    android:textColor="@android:color/black"
                    android:padding="12dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="8dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:clickable="true" />

                <TextView
                    android:id="@+id/categoryOther"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="44dp"
                    android:gravity="center_vertical"
                    android:text="Other"
                    android:textSize="14sp"
                    android:textColor="@android:color/black"
                    android:padding="12dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="8dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:clickable="true" />
            </LinearLayout>
        </ScrollView>

        <!-- Right list container -->
        <ScrollView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/white">

            <LinearLayout
                android:id="@+id/foodContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp" />
        </ScrollView>
    </LinearLayout>

    <!-- Bottom Summary Bar -->
    <LinearLayout
        android:id="@+id/bottomSummaryBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#CFE8D4"
        android:clickable="true"
        android:focusable="true">

        <!-- Summary Header (Always Visible) -->
        <LinearLayout
            android:id="@+id/summaryHeader"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@android:drawable/ic_menu_gallery"
                android:layout_marginEnd="12dp" />

            <TextView
                android:id="@+id/tvMealSummary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dinner"
                android:textSize="14sp"
                android:textColor="@android:color/black" />

            <ImageView
                android:id="@+id/ivExpandArrow"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@android:drawable/arrow_up_float"
                android:layout_marginStart="4dp" />

            <TextView
                android:id="@+id/tvFoodCount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Total 0 records, 0 kcal"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:layout_marginStart="8dp" />

            <TextView
                android:id="@+id/btnClear"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="Clear"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:background="?attr/selectableItemBackgroundBorderless" />

            <TextView
                android:id="@+id/btnComplete"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:text="Complete"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:textStyle="bold"
                android:gravity="center"
                android:background="#4CAF50"
                android:layout_marginStart="16dp" />

        </LinearLayout>

        <!-- Expandable Food List -->
        <LinearLayout
            android:id="@+id/expandableFoodList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:background="#E8F5E8">

            <LinearLayout
                android:id="@+id/foodListContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
